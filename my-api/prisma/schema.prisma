generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id        Int     @id @default(autoincrement())
  firstname String
  lastname  String
  email     String
  password  String
  role      Role
  isActive  Boolean

  @@map("users")
}

// car model
model Car {
  id       Int     @id @default(autoincrement())
  category String
  brand    String
  model    String
  year     Int
  price    Decimal @db.Decimal(10, 2)
  fuelType String

  // brand Brand @relation(fields: [brand], refernece: [id])

  @@map("cars")
}

// Brand model
model Brand {
  id      Int    @id @default(autoincrement())
  name    String
  logoUrl String

  @@map("brands")
}
