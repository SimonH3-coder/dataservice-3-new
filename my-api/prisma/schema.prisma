generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id        Int     @id @default(autoincrement())
  firstname String
  lastname  String
  email     String @unique
  password  String
  role      Role
  isActive  Boolean

  @@map("users")
}

// car model
model Car {
  id       Int     @id @default(autoincrement())
  categoryId Int
  brandId Int
  model    String
  year     Int
  created  DateTime @default(now()) @map("date_of_manufacture")
  price    Decimal @db.Decimal(10, 2)
  fueltypeId Int

  

  // brand Brand @relation(fields: [brand], refernece: [id])

  @@map("cars")
}

// Brand model
model Brand {
  id      Int    @id @default(autoincrement())
  name    String
  logoUrl String?

  @@map("brands")
}

// catogory model
model Category {
  id   Int    @id @default(autoincrement())
  name String
  @@map("categories")
}

//fueltype model
model Fueltype {
  id   Int    @id @default(autoincrement())
  name String

  @@map("fueltypes")
}


