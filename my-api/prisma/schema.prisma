generator client {
  provider = "prisma-client-js"
 
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  password String

  @@map("users")

}

// car model
model Car {
  id Int @id @default(autoincrement())
  category String
  brandId Int
  model String
  year Int
  price Decimal @db.Decimal(10, 2)
  fuelType String

  brand Brand @relation(fields: [brandId], references: [id])

  @@map("cars")

}

// Brand model
model Brand {
  id Int @id @default(autoincrement())
  name String
  logoUrl String

  cars Car[]

  @@map("brands")
}
